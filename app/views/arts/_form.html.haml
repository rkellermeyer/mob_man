= form_for @art do |f|
  - if @art.errors.any?
    #error_explanation
      %h2= "#{pluralize(@art.errors.count, "error")} prohibited this art from being saved:"
      %ul
        - @art.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
